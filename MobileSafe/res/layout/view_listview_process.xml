<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp" >
	
    
    <ImageView
        android:id="@+id/iv_process_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
         />

    <TextView
        android:id="@+id/tv_process_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_process_icon"
        android:text="安全卫士"
        android:textSize="19dp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/tv_process_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_process_icon"
		android:layout_below="@id/tv_process_name"
		android:layout_marginTop="3dp"
        android:text="内存占用"
        android:textSize="15dp"
        android:textColor="#aa222222" />
    
    <CheckBox 
        android:id="@+id/cb_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
       	/>
	
</RelativeLayout>