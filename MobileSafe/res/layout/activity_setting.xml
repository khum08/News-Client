<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res/com.yzhk.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        style="@style/TitleStyle"
        android:text="设置中心"/>
    <com.yzhk.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        tools:title="自动更新设置"
        tools:desc_on="自动更新已开启"
        tools:desc_off="自动更新关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.yzhk.mobilesafe.view.SettingItemView
        android:id="@+id/siv_addresssearch"
        tools:title="归属地显示"
        tools:desc_on="归属地显示已开启"
        tools:desc_off="归属地显示已关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.yzhk.mobilesafe.view.SettingChooseView
        android:id="@+id/scv_addresscolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.yzhk.mobilesafe.view.SettingChooseView
        android:id="@+id/scv_address_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.yzhk.mobilesafe.view.SettingItemView
        android:id="@+id/siv_blacknumber"
        tools:title="黑名单拦截"
        tools:desc_on="开启"
        tools:desc_off="关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.yzhk.mobilesafe.view.SettingItemView
        android:id="@+id/siv_applock"
        tools:title="程序锁"
        tools:desc_on="开启"
        tools:desc_off="关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    

</LinearLayout>
