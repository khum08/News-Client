<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/local_popup_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_app_launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动"
        android:textColor="#fff"
        android:drawableTop="@drawable/img2"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_app_unintall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卸载"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:drawableTop="@drawable/img1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_app_share"
        android:drawableTop="@drawable/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:layout_marginLeft="5dp"
        android:textColor="#fff"
        android:textSize="15dp" />

</LinearLayout>